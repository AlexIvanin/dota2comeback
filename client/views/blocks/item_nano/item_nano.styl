.item_nano
	width 72px
	border-radius 5px
	overflow hidden
	display inline-block
	font-size 12px
	margin 0 5px 10px 5px
	opacity .8
	transition box-shadow ease .2s
	cursor pointer

	img
		width 100%

	span
		text-align center

.item_nano:hover
	box-shadow 0 0 10px 5px rgba(0, 0, 0, .5)
	opacity 1

.item_nano > span
	display: block
	background-color rgba(0, 0, 0, .5)