template(name='news')
	.container
		.row
			.col-sm-offset-2.col-sm-8
				each news
					.row
						.col-sm-2
							img.img-responsive.pull-right(src='{{image}}' style='width: 80px; border-radius: 20%; margin-right: -15px; margin-top: 15px' alt='')
						.col-sm-10
							a(href='/news/{{_id}}')
								h1(style='margin-top: 10px; font-size: 25px')
									=title
									small.pull-right(style='font-size: 18px; line-height: 30px') {{getTime date}}
							| {{getHtml description}}
					.row(style='margin: 10px')
						.col-sm-12
							hr
				else
					center
						br
						br
						br
						br
						br
						br
						br
						br
						h1.text-muted Новостей нет